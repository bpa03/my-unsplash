{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "typeRoots": ["types/index.d.ts", "node_modules/@types"]
  },
  "include": ["src/**/*", "tests/**/*", "prisma/**/*", "types/index.d.ts"]
}
